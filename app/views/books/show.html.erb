<div class="container">
  <div class="row">
     <%= render 'books/error', model: @book %>
    <div class="col-md-3">
      <%= render 'users/users', user: @user %>
      <h2>New book</h2>
      <%= render 'books/books', book: @newbook %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h1>Book detail</h1>
      <table class="table table-user-show">
        <tr>
          <td><%= attachment_image_tag @user, :profile_image, :fill, 30, 30, fallback: "no_image.jpg"%></td>
          <td><%= link_to @user.name, user_path(@user) %></td>
          <td><%= @book.title %></td>
          <td><%= @book.body %></td>
          <% if @book.user_id == current_user.id %>
            <td><%= link_to "Edit", edit_book_path(@book), class:"btn btn-success"%></td>
            <td><%= link_to "Destroy", book_path(@book), method: :delete, data: {confirm: "本当に消しますか？"}, class:"btn btn-danger" %></td>
          <% end %>

           <%= render "favorites/favorite", book: @book %>

      <table>
      <% @book.post_comments.each do |post_comment| %>
        <tr>
          <td class="profile-image">
            <%= link_to user_path(@user) do %>
              <%= attachment_image_tag @user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg"%><br>
              <%= post_comment.user.name %>
            <% end %>
          </td>
          <td class="comment-entry"><%= post_comment.comment %></td>
          <td>
            <% if post_comment.user == current_user %>
              <%= link_to "destroy", book_post_comment_path(post_comment.book, post_comment), method: :delete, class: "btn btn-danger" %>
            <% end %>
          </td>
        </tr>
      <% end %>
      </table>
      <%= form_for [@book, @post_comment] do |f| %>
        <%= f.text_area :comment, rows:'5', class: "form-control" %>
        <%= f.submit "  送信  " %>
      <% end %>

        </tr>
      </table>
    </div>
  </div>
</div>