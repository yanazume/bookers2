<h1>User info</h1>
<%= form_for(@user) do |f| %>
<%= render 'books/error', model: @user %>
  <div class="user-name">Name</div>
    <%= f.text_field :name %>
    
   <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%>
  <label for="inputImage">ProfileImage</label>
  <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
    
  <div class="form-body">Introduction</div>
    <%= f.text_area :introduction %><br>
  <div class="upload">
    <%= f.submit " Update User" %>
  </div>
<% end %>