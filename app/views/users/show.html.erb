<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/users', user: @user %>
      <h2>New book</h2>
      <%= render 'books/books', book: @book %>
    </div>

        <div class="col-md-8  offset-md-1">
      <h1>Books</h1>
      <table class="table table-user-show">
     <tr>
     <th></th>
     <th>Title</th>
     <th>Opinion</th>
     <th colspan="3"></th>
     </tr>




        <% @books.each do |book| %>
          <tr>
            <td><%= link_to user_path(@user) do %>
              <%= attachment_image_tag @user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg"%>
            <% end %></td>
              <td><%= link_to book.title, book_path(book.id) %></td>
              <td><%= book.body %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>








